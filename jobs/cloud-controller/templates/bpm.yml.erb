<%-
  ccdb = link('cloud_controller_db').p('ccdb')
  db_scheme = ccdb.fetch('db_scheme')
  executable = case db_scheme
  when 'postgres'
    'cloud-controller-psql'
  when 'mysql'
    'cloud-controller-mysql'
  else
    raise "ccdb.db_scheme #{db_scheme} is not supported"
  end
-%>
processes:
- name: cloud-controller
  executable: /var/vcap/jobs/cloud-controller/packages/cloud-controller/<%= executable %>
  args:
  - /var/vcap/jobs/cloud-controller/config/cloud-controller.yml
  limits:
    processes: 3000000
    open_files: 800000
